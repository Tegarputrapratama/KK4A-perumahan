extends ../layout/base
block content
    section.content-header
        h1
            | Edit Rumah
            small menu for editing perumahan data
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
            li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Perumahan
            .box-tools.pull-right
                button(type='button', data-widget='collapse', datatoggle='tooltip',title='collapse').btn.btn-box-tool
                    i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/perumahan/edit/#{(id_pemilik==undefined) ? data.id_pemilik : id_pemilik}')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                                            | ×
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                - if (messages.msg_info)
                                    .alert.alert-success.alertdismissable
                                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                                            | ×
                                        h4
                                            i.icon.fa.fa-ban
                                            | Success!
                                        | !{messages.msg_info}
                                .form-group
                                    label
                                        | pemilik
                                    input(type='text',value="#{data.pemilik}",name='pemilik',placeholder='Enter pemilik', autofocus).form-control
                                .form-group
                                    label
                                        | alamat
                                    input(type='text',value="#{ (alamat == undefined) ? data.alamat : alamat }",name='address',placeholder='Enter alamat').form-control
                                .form-group
                                    label
                                        | phone
                                    input(type='text',value="#{ (phone ==undefined) ? data.phone : phone }",name='phone',placeholder='Enter phone').form-control
                                .form-group
                                    label
                                        | NIK
                                    input(type='text',value="#{ (NIK ==undefined) ? data.NIK : NIK }",name='NIK',placeholder='Enter NIK').form-control
                            .box-footer
                                input(type="hidden",name="_method", value="PUT")
                                button(type='submit').btn.btn-primary
                                    i.fa.fa-pencil
                                    | Edit
                                a(href='/perumahan').btn.btn-primary.pullright
                                    | Back